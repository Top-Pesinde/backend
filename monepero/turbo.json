{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build",
                "db:generate"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": [
                "^build"
            ]
        },
        "format": {
            "outputs": []
        },
        "format:check": {
            "outputs": []
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "coverage/**"
            ]
        },
        "test:unit": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "coverage/**"
            ]
        },
        "test:integration": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "coverage/**"
            ]
        },
        "test:ci": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "coverage/**"
            ]
        },
        "clean": {
            "cache": false
        },
        "db:generate": {
            "cache": false
        },
        "db:push": {
            "cache": false
        },
        "db:migrate": {
            "cache": false
        },
        "db:studio": {
            "cache": false,
            "persistent": true
        },
        "db:seed": {
            "cache": false
        }
    }
}